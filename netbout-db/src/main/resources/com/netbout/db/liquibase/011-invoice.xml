<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="11" author="yegor">
        <createTable tableName="invoice" remarks="Summary of billing information">
            <column name="day" type="DATE"
                remarks="When this happened, the day">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="helper" type="VARCHAR(250)"
                remarks="The helper who processed it">
                <constraints primaryKey="true" nullable="false"
                    foreignKeyName="invoice2identity" references="identity(name)" />
            </column>
            <column name="bout" type="BIGINT"
                remarks="Where it happened">
                <constraints primaryKey="true" nullable="false"
                    foreignKeyName="invoice2bout" references="bout(number)" />
            </column>
            <column name="msec" type="BIGINT"
                remarks="How long did it take">
                <constraints nullable="false" />
            </column>
        </createTable>
        <modifySql dbms="mysql">
            <append value=" ENGINE=InnoDB, DEFAULT CHARSET=UTF8"/>
        </modifySql>
    </changeSet>

</databaseChangeLog>
