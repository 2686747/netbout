<web-app version="3.0" metadata-complete="false"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>www.netbout.com</display-name>
    <description>netBout.com</description>

    <context-param>
        <param-name>Webmaster</param-name>
        <param-value>yegor@netbout.com</param-value>
    </context-param>

    <context-param>
        <param-name>rexsl.packages</param-name>
        <param-value>com.netbout.rest</param-value>
    </context-param>
    <listener>
        <listener-class>com.rexsl.core.CoreListener</listener-class>
    </listener>

    <filter>
        <filter-name>GuiceFilter</filter-name>
        <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GuiceFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <mime-mapping>
        <extension>xsl</extension>
        <mime-type>text/xsl</mime-type>
    </mime-mapping>

</web-app>
