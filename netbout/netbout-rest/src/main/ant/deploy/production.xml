<project name="production">

    <target name="deploy" description="attempting to deploy new stable version to production">

        <taskdef resource="net/sf/antcontrib/antcontrib.properties"
            classpathref="maven.plugin.classpath"/>

        <exec executable="sh" outputproperty="tag.current">
            <arg value="-c"/>
            <arg value="curl -s -H Accept:application/xml http://www.netbout.com/g | xmllint --xpath '//name/text()' -"/>
        </exec>
        <echo message="currently deployed: '${tag.current}'" />

        <exec dir="${basedir}" executable="svn" failonerror="true" outputproperty="tags">
            <arg value="ls"/>
            <arg value="--username"/>
            <arg value="${svn.username}"/>
            <arg value="--password"/>
            <arg value="${svn.password}"/>
            <arg value="--no-auth-cache"/>
            <arg value="--non-interactive"/>
            <arg value="svn://svn.netbout.com/netbout/tags"/>
        </exec>

        <exec dir="${basedir}" executable="sh" failonerror="true" outputproperty="tag.new" inputstring="${tags}">
            <arg value="-c"/>
            <arg value="grep netbout\- | tail -1 | sed 's/\///' | sed 's/netbout-//'"/>
        </exec>
        <echo message="ready for deployment: '${tag.new}'" />

        <if>
            <equals arg1="${tag.current}" arg2="${tag.new}" />
            <then>
                <echo message="version ${tag.current} is the latest, no need to deploy" />
            </then>
            <else>
                <echo message="replacing '${tag.current}' with '${tag.new}'..." />
                <exec dir="${basedir}/target" executable="svn" failonerror="true">
                    <arg value="checkout"/>
                    <arg value="--username"/>
                    <arg value="${svn.username}"/>
                    <arg value="--password"/>
                    <arg value="${svn.password}"/>
                    <arg value="--no-auth-cache"/>
                    <arg value="--quiet"/>
                    <arg value="--non-interactive"/>
                    <arg value="svn://svn.netbout.com/netbout/tags/netbout-${tag.new}"/>
                    <arg value="${tag.new}"/>
                </exec>
                <exec dir="${basedir}/target/${tag.new}" executable="mvn" failonerror="true">
                    <arg value="-Pnetbout-production"/>
                    <arg value="-DskipTests"/>
                    <arg value="-Dbeanstalk"/>
                    <arg value="-Dsub-deploying"/>
                    <arg value="--errors"/>
                    <arg value="--update-snapshots"/>
                    <arg value="--settings"/>
                    <arg value="${maven.settings}"/>
                    <arg value="clean"/>
                    <arg value="deploy"/>
                </exec>
            </else>
        </if>

    </target>

</project>
