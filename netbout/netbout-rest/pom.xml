        <plugins>
            <plugin>
                <groupId>com.rexsl</groupId>
                <artifactId>rexsl-maven-plugin</artifactId>
                <version>0.3</version>
                <!-- HTML and CSS files are not W3C compliant yet -->
                <!-- <version>${rexsl.version}</version> -->
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>continuous-integration</id>
            <activation>
                <property><name>ci</name></property>
            </activation>
            <properties>
                <beanstalk.app>${project.build.finalName}-${buildNumber}.${project.packaging}</beanstalk.app>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <!--
                        This plugin will collect current build number
                        from Subversion and save it into Maven property "buildNumber".
                        -->
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>buildnumber-maven-plugin</artifactId>
                        <version since="1 Aug 2011">1.0-beta-4</version>
                        <executions>
                            <execution>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>create</goal>
                                </goals>
                                <configuration>
                                    <doCheck>false</doCheck>
                                    <doUpdate>false</doUpdate>
                                    <getRevisionOnlyOnce>true</getRevisionOnlyOnce>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>br.com.ingenieux</groupId>
                        <artifactId>beanstalk-maven-plugin</artifactId>
                        <version since="15 Aug 2011">0.2.5</version>
                        <configuration>
                            <applicationName>netbout</applicationName>
                            <applicationDescription>netbout</applicationDescription>
                            <cnamePrefix>netbout</cnamePrefix>
                            <environmentName>netbout</environmentName>
                            <s3Bucket>webapps.netbout.com</s3Bucket>
                            <s3Key>${beanstalk.app}</s3Key>
                            <versionLabel>${beanstalk.app}</versionLabel>
                            <daysToKeep>10</daysToKeep>
                            <dryRun>false</dryRun>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>upload-source-bundle</goal>
                                    <goal>create-application-version</goal>
                                    <goal>update-environment</goal>
                                    <goal>clean-previous-versions</goal>
                                </goals>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>com.rexsl</groupId>
                                <artifactId>rexsl-core</artifactId>
                                <version>${rexsl.version}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                    <!-- <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version since="2 Dec 2011">1.7</version>
                        <executions>
                            <execution>
                                <id>deploy-logging-backend</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <ftp server="logs.netbout.com"
                                            remotedir="."
                                            userid="${logs.user}"
                                            password="${logs.password}"
                                            depends="yes">
                                            <fileset dir="${basedir}/src/main/php"/>
                                        </ftp>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin> -->
                </plugins>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <artifactId>maven-war-plugin</artifactId>
                            <configuration>
                                <warSourceExcludes>js/**, css/**, xsl/**</warSourceExcludes>
                                <archive>
                                    <manifestEntries>
                                        <Netbout-Revision>${buildNumber}</Netbout-Revision>
                                        <Netbout-Version>${project.version}</Netbout-Version>
                                        <Netbout-Date>${maven.build.timestamp}</Netbout-Date>
                                        <Netbout-FbId>${fb.id}</Netbout-FbId>
                                        <Netbout-FbSecret>${fb.secret}</Netbout-FbSecret>
                                        <Netbout-JdbcDriver>com.mysql.jdbc.Driver</Netbout-JdbcDriver>
                                        <Netbout-JdbcUrl>jdbc:mysql://${mysql.host}:${mysql.port}/${mysql.database}?useUnicode=true&amp;characterEncoding=utf-8&amp;useGmtMillisForDatetimes=true</Netbout-JdbcUrl>
                                        <Netbout-JdbcUser>${mysql.user}</Netbout-JdbcUser>
                                        <Netbout-JdbcPassword>${mysql.password}</Netbout-JdbcPassword>
                                        <Netbout-SmtpHost>${smtp.host}</Netbout-SmtpHost>
                                        <Netbout-SmtpPort>${smtp.port}</Netbout-SmtpPort>
                                        <Netbout-SmtpUser>${smtp.user}</Netbout-SmtpUser>
                                        <Netbout-SmtpPassword>${smtp.password}</Netbout-SmtpPassword>
                                        <Netbout-PopUser>${pop3.user}</Netbout-PopUser>
                                        <Netbout-PopPassword>${pop3.password}</Netbout-PopPassword>
                                        <Netbout-PopHost>${pop3.host}</Netbout-PopHost>
                                        <Netbout-PopPort>${pop3.port}</Netbout-PopPort>
