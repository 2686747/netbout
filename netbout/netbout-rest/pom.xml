                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
        <profile>
            <id>catapult</id>
            <activation>
                <file><exists>pom.xml</exists></file>
            </activation>
            <properties>
                <catapult.warName>${project.build.finalName}-catapult</catapult.warName>
                <!--
                @todo #160 If you change this path to something different from
                 "/" there will be many problems with paths of XSL and CSS files.
                 It's definitely a defect and should be fixed either in netbout
                 project or in rexsl.
                -->
                <catapult.context>/</catapult.context>
            </properties>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>com.rexsl</groupId>
                            <artifactId>rexsl-maven-plugin</artifactId>
                            <configuration>
                                <systemPropertyVariables>
                                    <catapult.home>http://localhost:${catapult.port}${catapult.context}</catapult.home>
                                </systemPropertyVariables>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <version since="2 Dec 2011">1.7</version>
                        <executions>
                            <execution>
                                <id>reserve-tomcat-port</id>
                                <phase>generate-test-resources</phase>
                                <goals>
                                    <goal>reserve-network-port</goal>
                                </goals>
                                <configuration>
                                    <portNames>
                                        <portName>catapult.port</portName>
                                    </portNames>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-war-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>war-for-catapult</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>war</goal>
                                </goals>
                                <configuration>
                                    <warName>${catapult.warName}</warName>
                                    <archive>
                                        <manifestEntries>
                                            <Netbout-Revision>555</Netbout-Revision>
                                            <Netbout-Version>${project.version}</Netbout-Version>
                                            <Netbout-Date>${maven.build.timestamp}</Netbout-Date>
                                            <Netbout-FbId>12345</Netbout-FbId>
                                            <Netbout-FbSecret>secret</Netbout-FbSecret>
                                            <Netbout-JdbcDriver>com.mysql.jdbc.Driver</Netbout-JdbcDriver>
                                            <!-- see http://dev.mysql.com/doc/refman/5.0/en/connector-j-reference-configuration-properties.html -->
                                            <Netbout-JdbcUrl>jdbc:mysql://test-db.netbout.com:3306/netbout-test?useUnicode=true&amp;characterEncoding=utf-8&amp;useGmtMillisForDatetimes=true</Netbout-JdbcUrl>
                                            <Netbout-JdbcUser>netbout-test</Netbout-JdbcUser>
                                            <Netbout-JdbcPassword>netbout-test</Netbout-JdbcPassword>
                                            <Netbout-SmtpHost>relay.jangosmtp.net</Netbout-SmtpHost>
                                            <Netbout-SmtpPort>2525</Netbout-SmtpPort>
                                            <Netbout-SmtpUser>yegor256</Netbout-SmtpUser>
                                            <Netbout-SmtpPassword>201448CX</Netbout-SmtpPassword>
                                            <Netbout-PopUser>test@netbout.com</Netbout-PopUser>
                                            <Netbout-PopPassword>netbout-test</Netbout-PopPassword>
                                            <Netbout-PopHost>pop.gmail.com</Netbout-PopHost>
                                            <Netbout-PopPort>995</Netbout-PopPort>
                                        </manifestEntries>
                                    </archive>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.tomcat.maven</groupId>
                        <artifactId>tomcat7-maven-plugin</artifactId>
                        <version since="7 Feb 2012">2.0-beta-1</version>
                        <configuration>
                            <systemProperties>
                                <log4j.configuration>file:${basedir}/src/test/resources/log4j.properties</log4j.configuration>
                            </systemProperties>
                            <contextFile>${basedir}/src/test/catapult/context.xml</contextFile>
                            <fork>true</fork>
                            <path>${catapult.context}</path>
                            <port>${catapult.port}</port>
                            <uriEncoding>UTF-8</uriEncoding>
                            <useSeparateTomcatClassLoader>true</useSeparateTomcatClassLoader>
                            <warDirectory>${project.build.directory}/${catapult.warName}.war</warDirectory>
                        </configuration>
                        <executions>
                            <execution>
                                <id>start-embedded-tomcat</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>run-war-only</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>stop-embedded-tomcat</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>shutdown</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

