<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="yegor">

        <addColumn tableName="identity">
            <column name="date" type="DATETIME" defaultValueDate="2012-01-11"
                remarks="When this row has been created">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <dropDefaultValue tableName="identity" columnName="date"/>

        <addColumn tableName="bout">
            <column name="date" type="DATETIME" defaultValueDate="2012-01-11"
                remarks="When this row has been created" >
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <dropDefaultValue tableName="bout" columnName="date"/>

        <addColumn tableName="participant">
            <column name="date" type="DATETIME" defaultValueDate="2012-01-11"
                remarks="When this row has been created" >
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <dropDefaultValue tableName="participant" columnName="date"/>

        <addColumn tableName="seen">
            <column name="date" type="DATETIME" defaultValueDate="2012-01-11"
                remarks="When this row has been created" >
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <dropDefaultValue tableName="seen" columnName="date"/>

        <addColumn tableName="alias">
            <column name="date" type="DATETIME" defaultValueDate="2012-01-11"
                remarks="When this row has been created" >
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <dropDefaultValue tableName="alias" columnName="date"/>

        <addColumn tableName="helper">
            <column name="date" type="DATETIME" defaultValueDate="2012-01-11"
                remarks="When this row has been created" >
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <dropDefaultValue tableName="helper" columnName="date"/>

        <addColumn tableName="namespace">
            <column name="date" type="DATETIME" defaultValueDate="2012-01-11"
                remarks="When this row has been created" >
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <dropDefaultValue tableName="namespace" columnName="date"/>

    </changeSet>

</databaseChangeLog>
