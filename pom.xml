<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.jcabi</groupId>
        <artifactId>parent</artifactId>
        <version>0.7.17</version>
    </parent>
    <groupId>com.netbout</groupId>
    <artifactId>netbout</artifactId>
    <version>2.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>netbout</name>
    <modules>
        <module>netbout-db</module>
        <module>netbout-bus</module>
        <module>netbout-inf</module>
        <module>netbout-hub</module>
        <module>netbout-rest</module>
    </modules>
    <description>Persistent Communications Online</description>
    <url>http://www.netbout.com</url>
    <inceptionYear>2010</inceptionYear>
    <organization>
        <name>Netbout Inc.</name>
        <url>http://www.netbout.com</url>
    </organization>
    <licenses>
        <license>
            <name>Netbout persistent communications</name>
            <url>http://www.netbout.com/LICENSE.txt</url>
            <distribution>repo</distribution>
            <comments>This is a proprietary software, you can't redistribute it</comments>
        </license>
    </licenses>
    <developers>
        <developer>
            <id>1</id>
            <name>Yegor Bugayenko</name>
            <email>yegor@netbout.com</email>
            <organization>Netbout Inc.</organization>
            <organizationUrl>http://www.netbout.com</organizationUrl>
            <roles>
                <role>Architect</role>
                <role>Developer</role>
            </roles>
            <timezone>-7</timezone>
        </developer>
    </developers>
    <issueManagement>
        <system>github</system>
        <url>https://github.com/yegor256/netbout/issues</url>
    </issueManagement>
    <scm>
        <connection>scm:git:github.com:yegor256/netbout.git</connection>
        <developerConnection>scm:git:github.com:yegor256/netbout.git</developerConnection>
        <url>https://github.com/yegor256/netbout</url>
    </scm>
    <distributionManagement>
        <snapshotRepository>
            <id>repo.netbout.com</id>
            <url>s3://repo.netbout.com/snapshot</url>
        </snapshotRepository>
        <repository>
            <id>repo.netbout.com</id>
            <url>s3://repo.netbout.com/release</url>
        </repository>
        <site>
            <id>maven.netbout.com</id>
            <name>Netbout.com Project Site</name>
            <url>s3://maven.netbout.com/</url>
        </site>
    </distributionManagement>
    <properties>
        <rempl.dir>${basedir}</rempl.dir>
        <rexsl.version>1.0-SNAPSHOT</rexsl.version>
        <jcabi.version>1.0-SNAPSHOT</jcabi.version>
        <spi.version>2.0-SNAPSHOT</spi.version>
        <jersey.version>1.17.1</jersey.version>
    </properties>
    <repositories>
        <repository>
            <id>repo.netbout.com</id>
            <url>s3://repo.netbout.com/snapshot</url>
        </repository>
    </repositories>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <!-- Service programming interface of the netbout -->
                <groupId>com.netbout.spi</groupId>
                <artifactId>netbout-spi</artifactId>
                <version>${spi.version}</version>
            </dependency>
            <dependency>
                <!-- URN implementation -->
                <groupId>com.jcabi</groupId>
                <artifactId>jcabi-urn</artifactId>
                <version>${jcabi.version}</version>
                <classifier>mock</classifier>
                <scope>test</scope>
            </dependency>
            <dependency>
                <!--
                Apache Xerces is a JAXP implementation of DOM.
                In order to replace a default implementation
                provided by JDK with Xerces we are using text files inside
                "src/main/resources/META-INF/services" directory.
                -->
                <groupId>xerces</groupId>
                <artifactId>xercesImpl</artifactId>
                <version>2.9.1</version>
            </dependency>
            <dependency>
                <groupId>javax.xml.bind</groupId>
                <artifactId>jaxb-api</artifactId>
                <version>2.2.3</version>
                <exclusions>
                    <exclusion>
                        <groupId>javax.xml.bind</groupId>
                        <artifactId>jsr173_api</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>joda-time</groupId>
                <artifactId>joda-time</artifactId>
                <version>2.0</version>
            </dependency>
            <dependency>
                <!-- Generator of random texts. -->
                <groupId>de.sven-jacobs</groupId>
                <artifactId>loremipsum</artifactId>
                <version>1.0</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <plugins>
            <plugin>
                <groupId>com.jcabi</groupId>
                <artifactId>jcabi-ssl-maven-plugin</artifactId>
                <version>${jcabi.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>keygen</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
