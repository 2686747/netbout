commands:
  01-attach-volume:
    command: export JAVA_HOME=/usr/lib/jvm/jre && export EC2_HOME=/opt/aws/apitools/ec2 && /opt/aws/bin/ec2-attach-volume ${ebs.volume} -i $(/opt/aws/bin/ec2-metadata --instance-id | cut -c14-) -d /dev/sdf --aws-access-key ${aws.key} --aws-secret-key ${aws.secret}
  02-mkdir:
    command: mkdir -p ${inf.path}
  03-mount-device:
    command: sleep 30 && mount /dev/xvdf ${inf.path}
  04-chown:
    command: chown -R tomcat.tomcat ${inf.path}
